import javax.swing.JOptionPane;

public class Mad_Libs
{
	public static void main(String[] args) {
		String adjective=	JOptionPane.showInputDialog("ENTER A ADJECTIVE BEN");
		String noun=	JOptionPane.showInputDialog("ENTER A NOUN BEN");
		String verb=	JOptionPane.showInputDialog("ENTER A VERB BEN");
		JOptionPane.showMessageDialog(	null,"There once was a" + adjective + "person, his name was" + noun + "the person was" + verb + "at the moment");
	}
}

